{
  "env": {
    "node": true,
    "es6": true,
    "mocha": true
  },
  "extends": ["airbnb-base", "prettier"],
  "plugins":["prettier"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion" : 2018,
    "sourceType": "script"
  },
  "rules": {
    "no-console": 2,
    "prettier/prettier": ["error"]
  },
  "overrides": [
    {
        "files": ["test/**/*.js"],
        "rules": {
            "no-unused-expressions": "off"
        }
    }
  ]
}

